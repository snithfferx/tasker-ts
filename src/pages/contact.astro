---
import BaseLayout from '@Layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us | Tasker">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-12 animate-fade-in">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 dark:text-white">Get in Touch</h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">We'd love to hear from you. Please fill out the form below or use our contact details.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div class="card animate-slide-up">
          <div class="card-content">
            <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white">Send us a Message</h2>
            <form class="space-y-6">
              <div>
                <label for="name" class="form-label">Full Name</label>
                <input type="text" id="name" name="name" required class="form-input" placeholder="John Doe" />
              </div>
              <div>
                <label for="email" class="form-label">Email Address</label>
                <input type="email" id="email" name="email" required class="form-input" placeholder="you@example.com" />
              </div>
              <div>
                <label for="message" class="form-label">Message</label>
                <textarea id="message" name="message" required rows="5" class="form-input" placeholder="Your message..."></textarea>
              </div>
              <div>
                <button type="submit" class="btn btn-primary w-full py-3">
                  Send Message
                </button>
              </div>
            </form>
          </div>
        </div>

        <div class="space-y-8 animate-slide-up" style="animation-delay: 200ms;">
          <div class="card">
            <div class="card-content">
              <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Contact Information</h2>
              <ul class="space-y-4 text-gray-700 dark:text-gray-300">
                <li class="flex items-start">
                  <div class="flex-shrink-0 text-indigo-600 dark:text-indigo-400 mt-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <span class="ml-4">123 Main St, Anytown, USA 12345</span>
                </li>
                <li class="flex items-center">
                  <div class="flex-shrink-0 text-indigo-600 dark:text-indigo-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <a href="mailto:contact@tasker.com" class="ml-4 hover:underline">contact@tasker.com</a>
                </li>
                <li class="flex items-center">
                  <div class="flex-shrink-0 text-indigo-600 dark:text-indigo-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <a href="tel:+15551234567" class="ml-4 hover:underline">+1 (555) 123-4567</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="card">
            <div class="card-content">
              <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">Our Location</h2>
              <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-200 dark:bg-gray-700">
                <!-- Placeholder for map -->
                <div class="w-full h-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center">
                  <p class="text-gray-500 dark:text-gray-400">Map Placeholder</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
